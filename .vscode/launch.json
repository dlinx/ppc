    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}/ppc-server",
            "program": "${workspaceFolder}/ppc-server/node_modules/.bin/ts-node",
            "args": ["${workspaceFolder}/ppc-server/bin/www"],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}